#version 450
#include "../utils.comp"

layout(binding = 0) readonly buffer src_buffer {
    u8vec3 colors[];
};

layout(binding = 1, rgba8ui) uniform writeonly lowp uimage2D dst_image;

void main() {
    u8vec3 input_data = colors[GetAddress()];
    imageStore(dst_image, GetImageCoord(), uvec4(input_data, ~0u));
}
