#version 450
#include "../utils.comp"

layout(binding = 0) writeonly buffer src_buffer {
    u8vec3 colors[];
};

layout(binding = 1, rgba8ui) uniform readonly lowp uimage2D dst_image;

void main() {
    u8vec4 rgbx = u8vec4(imageLoad(dst_image, GetImageCoord()));
    colors[GetAddress()] = rgbx.rgb;
}
